{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": ["node"],
    "paths": {
      "@shared": [
        "app/shared"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@core": [
        "app/core/"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@services": [
        "app/services"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@animations": [
        "app/animations"
      ],
      "@animations/*": [
        "app/animations/*"
      ],
      "@auth": [
        "app/auth"
      ],
      "@auth/*": [
        "app/auth/*"
      ],
      "@layout": [
        "app/layout"
      ],
      "@layout/*": [
        "app/layout/*"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
